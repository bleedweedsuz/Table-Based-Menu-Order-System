<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faf1cd">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView4"
        android:background="#ffffff">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressReport"
                android:visibility="gone"
                android:indeterminate="true" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:id="@+id/relativeLayout2"
                android:background="#c2185b"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurant Name"
                    android:id="@+id/resName"
                    android:textSize="36dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurant Description"
                    android:id="@+id/resDescription"
                    android:textSize="21dp"
                    android:textColor="#162044"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:id="@+id/linearLayout2"
                android:background="#c2185b"
                android:layout_above="@+id/scrollView2"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Best Dish "
                    android:id="@+id/resDishName"
                    android:textSize="34dp"
                    android:layout_below="@+id/scrollView3"
                    android:layout_alignStart="@+id/scrollView3"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DishTutorial"
                    android:id="@+id/resDishTutorial"
                    android:textSize="21dp"
                    android:textColor="#162044"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>