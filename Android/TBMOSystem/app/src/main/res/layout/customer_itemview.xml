<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView6"
            android:layout_weight="4" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/leftView"
                >
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/ImageCardView"
                    android:layout_height="250dp"
                    android:layout_width="match_parent"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    android:layout_alignParentStart="false"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/dessert"
                            android:scaleType="fitCenter"
                            android:id="@+id/itemIco"
                            android:padding="2dp"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="2dp"
                            android:background="#faf1cd" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view"
                    android:layout_height="80dp"
                    android:layout_width="match_parent"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/ImageCardView"
                    android:layout_alignParentStart="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:background="#faf1cd">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Rs. 00 /-"
                            android:id="@+id/RateVal"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textSize="26dp"
                            android:textStyle="bold"
                            android:textColor="#e7000000" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_height="70dp"
                    android:layout_width="match_parent"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/card_view"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:clickable="true"
                        android:background="@drawable/ripple3"
                        android:onClick="AddItem">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Add"
                            android:id="@+id/AddItem"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textSize="28dp"
                            android:textColor="#e7000000"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </RelativeLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rightView"
            android:layout_weight="2">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/MainContainer">
                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_height="65dp"
                        android:layout_width="match_parent"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardElevation="5dp"
                        card_view:cardUseCompatPadding="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentStart="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:background="#faf1cd">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Item Title"
                                android:id="@+id/itemTitle"
                                android:layout_centerVertical="true"
                                android:textSize="28dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:gravity="center_vertical"
                                android:textColor="#e7000000" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardElevation="5dp"
                        card_view:cardUseCompatPadding="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentStart="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:background="#faf1cd"
                            android:paddingRight="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@string/demoDetails"
                                android:id="@+id/itemDescription"
                                android:layout_centerVertical="true"
                                android:textSize="16dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:textColor="#e7000000"
                                android:padding="15dp"
                                android:textAlignment="textStart" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pBarProgress"
                        android:visibility="gone"
                        android:indeterminate="true" />

                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardElevation="5dp"
                        card_view:cardUseCompatPadding="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentStart="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:background="#faf1cd">
                            <GridView
                                android:id="@+id/grid"
                                android:numColumns="4"
                                android:stretchMode="columnWidth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:verticalSpacing="10dp"
                                android:layout_marginRight="2dp"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </ScrollView>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>