<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#c2185b"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manual To Place the Food Order."
            android:id="@+id/t0"
            android:textSize="36dp"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView5" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Click on Customer Button from Main Interface."
                    android:id="@+id/t1"
                    android:textSize="23dp"
                    android:textColor="#162044"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/imageView"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/t1"
                    android:background="@drawable/customer" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Click Continue to create a new Token for new customer."
                    android:id="@+id/t2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textSize="23dp"
                    android:textColor="#162044" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Tap the left side panel according to the image given."
                    android:id="@+id/t3"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textSize="23dp"
                    android:textColor="#162044" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. Select the desired food item by clicking on the food item."
                    android:id="@+id/t4"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textSize="23dp"
                    android:textColor="#162044" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5. Click on Add button to add the food item to the order list."
                    android:id="@+id/t5"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textSize="23dp"
                    android:textColor="#162044" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6. Follow the same process as number 4 to add more food item to order list."
                    android:id="@+id/t6"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textSize="23dp"
                    android:textColor="#162044" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7. Click On OrderList image to view all the food items added to order list."
                    android:id="@+id/t7"
                    android:textSize="23dp"
                    android:textColor="#162044"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/imageView3"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/t7"
                    android:background="@drawable/dlist" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8. Click the item list that you do not want to proceed the order and delete it."
                    android:id="@+id/t8"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textSize="23dp"
                    android:textColor="#162044" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9. If you finalize the desired food item then click on confirm order button."
                    android:id="@+id/t9"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textSize="23dp"
                    android:textColor="#162044" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10. Enter Table number and click OK button."
                    android:id="@+id/t10"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textSize="23dp"
                    android:textColor="#162044" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11. And again click ok to further proceed the order to the Restaurant Kitchen/ Click no to cancel and repeat the same process from number 8."
                    android:id="@+id/t11"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textSize="23dp"
                    android:textColor="#162044" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12. After the confirmation of  food order completed, click on the food item you want to put comment on it."
                    android:id="@+id/t12"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textSize="23dp"
                    android:textColor="#162044" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t13"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textSize="23dp"
                    android:text="13. Put note and save it, and again select the &quot; Update Order&quot;  button then enter the table number,the comment will get updated to the food item that you order."
                    android:textColor="#162044" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14. Finally enjoy your meal, after finished click on Bill Please button and view the total bill."
                    android:id="@+id/t14"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textSize="23dp"
                    android:textColor="#162044" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15. After paying the bill, click on check out to finish your session. "
                    android:id="@+id/t15"
                    android:textSize="23dp"
                    android:textColor="#162044" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>